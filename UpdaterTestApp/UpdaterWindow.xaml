<Window x:Class="UpdaterTestApp.UpdaterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wy="clr-namespace:wyDay.Controls;assembly=AutomaticUpdaterWPF"
    Title="UpdaterWindow" Height="0" Width="0"
        WindowStyle="None"
        ShowInTaskbar="False"
        ShowActivated="False"
        Visibility="Hidden"
        >
    <Grid>
        <wy:AutomaticUpdater Name="autoUpdater"
                             HorizontalAlignment="Right" VerticalAlignment="Top" 
                             WaitBeforeCheckSecs="1800"
                             DaysBetweenChecks="0"
                             KeepHidden="True"
                             Visibility="Collapsed"
                             wyUpdateCommandline='-basedir="..\"'
                             GUID="my-app" />
    </Grid>
</Window>
